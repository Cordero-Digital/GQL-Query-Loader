{
    "name": "cordero-digital/gql-query-loader",
    "description": "A PHP library that adds native .gql and .graphql file type support.",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "pestphp/pest": "^3.7",
        "symfony/var-dumper": "^7.2"
    },
    "autoload": {
        "psr-4": {
            "CorderoDigital\\GQLQueryLoader\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Tomas Cordero",
            "email": "tomas@cordero.digital"
        }
    ],
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": "./vendor/bin/pest"
    }
}
